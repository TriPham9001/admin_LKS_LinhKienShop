<div class="content-wrapper">

    <div class="container">
        <img src="images/logo.png" width="170" height="500" class="col-md-6 " />
        <div class="row" style="display: flex;">
            <div class="col-md-6 col-sm-6" style="margin: auto;">
                <div class="panel-heading">
                    LOGIN
                </div>
                <div class="panel-body">
                    <form role="form" action="/dang-nhap" method="post">
                        <div class="form-group">
                            <label>Enter Username</label>
                            <input onchange="validationFrom()" required class="form-control" type="text" name="username" id="username">
                        </div>
                        <div class="form-group">
                            <label>Enter Password</label>
                            <input onchange="validationFrom()" required class="form-control" type="password" name="password" id="password">
                        </div>
                        <button id="button" disabled type="submit" class="btn btn-info">Login</button>
                    </form>
                    <div>{{err}}</div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const validationFrom = () => {
        const username = document.getElementById('username').value;
        const password = document.getElementById('password').value;
        if (!username || !password || username.trim().length === 0 || password.trim().length === 0
        ) {
            document.getElementById('button').disabled = true;
        } else {
            document.getElementById('button').disabled = false;
        }
    }
</script>